//- labmgr.pug
extends layout

block js
    script(src='js/jquery-3.6.0.min.js')
    script(src='js/labmgr.js')
    script(src='js/pdf-lib.min.js')
    script(src='js/download.js')
    script(src='js/fontkit.umd.min.js')

block append css
    link(rel='stylesheet' type='text/css' href='css/labmgr.css')

block content
    h1 #{message}

    form(name='tagInput' autocomplete='off')
        div.form-group
            label(for='uid') Card ID:
            input#tid.form-control(type='text', name='uid')
            button.btn.btn-primary(type='submit' onSubmit='return false;') Search

        div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', name='name' value='')

    div(id='mtime')

    div(id='psales')

